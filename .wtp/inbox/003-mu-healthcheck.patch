+
+if (!defined('ABSPATH')) { return; }
+
+// Ścieżka do pliku dowodowego poza public_html:
+if (!defined('WTP_MU_HEALTH_FILE')) {
+    define('WTP_MU_HEALTH_FILE', '/home/u493676300/debug/mu-health.txt');
