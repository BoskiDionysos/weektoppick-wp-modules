+add_action('rest_api_init', function () {
+    register_rest_route('wtp-health/v1', '/ping', [
+        'methods'  => 'GET',
+        'permission_callback' => function ($req) {
+            $t = $req->get_param('token');
+            $expected = null;
+            if (defined('WTP_AGENT_TOKEN')) {
