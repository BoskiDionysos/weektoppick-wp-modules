+/**
+ * Zapisz "heartbeat" do pliku i do error_log (raz na 60s, żeby nie mielić dysku).
+ */
+function wtp_mu_health_write() {
+    $when = gmdate('c');
+    $where = is_admin() ? 'admin' : 'front';
+    $uri = isset($_SERVER['REQUEST_URI']) ? $_SERVER['REQUEST_URI'] : '';
+    $line = "[$when] wtp-mu-health hit: {$where} {$uri}";
+
+    // Throttle: max 1 wpis na 60s (transient działa od WP init wzwyż).
+    if (function_exists('get_transient') && function_exists('set_transient')) {
+        if (get_transient('wtp_mu_health_written')) {
+            return;
+        }
+        set_transient('wtp_mu_health_written', 1, 60);
+    }
+
+    // Plik
+    @file_put_contents(WTP_MU_HEALTH_FILE, $line . PHP_EOL, FILE_APPEND);
+    // PHP error_log (Hostinger przekieruje to do Twojego pliku błędów)
+    @error_log('[wtp-mu-health] ' . $line);
+}
+add_action('muplugins_loaded', 'wtp_mu_health_write', 1);
