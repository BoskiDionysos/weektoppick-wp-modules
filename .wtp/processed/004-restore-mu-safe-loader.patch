+<?php
+/**
+ * MU Safe Loader
+ * 
+ * Zabezpieczenie przed błędami w MU-plugins — ładuje każdy plugin osobno
+ * i izoluje awarie, żeby nie blokowały całego WordPressa.
+ */
+
+if (!defined('ABSPATH')) {
+    exit;
+}
+
+$mu_dir = _DIR_;
+$files = glob($mu_dir . '/*.php');
+
+foreach ($files as $file) {
+    if (basename($file) === basename(_FILE_)) {
+        continue; // pomijamy sam loader
+    }
+    try {
+        include_once $file;
+    } catch (Throwable $e) {
+        error_log("MU Safe Loader: błąd w $file – " . $e->getMessage());
+        // nie zabijamy całego WP
+    }
+}
